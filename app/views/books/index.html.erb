<% if flash[:notice] %>
  <div class="flash" >
  	<%= notice %>
  </div>
<% end %>

 <h1>Books</h1>


  <table>
    <tr>
    <th>Title</th>
    <th>Body</th>
    </tr>
  </table>


 <% @books.each do |book| %>
  <table>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show", book_path(book.id) %></span></td>
      <td><span><%= link_to "Edit", edit_book_path(book.id) %></span></td>
      <td><span><%= link_to "Destroy", book_path(book.id), method: :delete,
          data: {confirm: 'Are you sure?' } %></span></td>
    </tr>
  </table>
 <% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
    <div class = "error_explanation" class="alert alert-worning">
    	<ul>
    		<% @book.errors.full_messages.each do |message| %>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    </div>
<% end %>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class=submit>
    <%= f.submit "Create Book", class:"ok"%>
	</div>

    <% end %>
